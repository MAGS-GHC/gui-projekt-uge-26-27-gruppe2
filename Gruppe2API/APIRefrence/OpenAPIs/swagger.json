{
  "openapi": "3.0.1",
  "info": {
    "title": "Gruppe2API",
    "version": "1.0"
  },
  "paths": {
    "/Stadium/GetStadium": {
      "get": {
        "tags": [
          "Stadium"
        ],
        "parameters": [
          {
            "name": "stadiumId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/Stadium"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stadium"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/Stadium"
                }
              }
            }
          }
        }
      }
    },
    "/Stadium/GetSeats": {
      "get": {
        "tags": [
          "Stadium"
        ],
        "parameters": [
          {
            "name": "stadiumId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "matchId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "sectionId",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Seat"
                  }
                }
              },
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Seat"
                  }
                }
              },
              "text/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Seat"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/Stadium/BuySeats": {
      "post": {
        "tags": [
          "Stadium"
        ],
        "parameters": [
          {
            "name": "email",
            "in": "query",
            "style": "form",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TakenSeat"
                }
              }
            },
            "text/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TakenSeat"
                }
              }
            },
            "application/*+json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/TakenSeat"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "text/plain": {
                "schema": {
                  "$ref": "#/components/schemas/TicketOrder"
                }
              },
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketOrder"
                }
              },
              "text/json": {
                "schema": {
                  "$ref": "#/components/schemas/TicketOrder"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MatchInfo": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "stadiumId": {
            "type": "integer",
            "format": "int32"
          },
          "homeTeam": {
            "type": "string",
            "nullable": true
          },
          "awayTeam": {
            "type": "string",
            "nullable": true
          },
          "matchDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "Seat": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "rowId": {
            "type": "integer",
            "format": "int32"
          },
          "rowNumber": {
            "type": "integer",
            "format": "int32"
          },
          "seatNumber": {
            "type": "integer",
            "format": "int32"
          },
          "isTaken": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "Stadium": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "sections": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/StadiumSection"
            },
            "nullable": true
          },
          "matchList": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/MatchInfo"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StadiumSection": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "stadionId": {
            "type": "integer",
            "format": "int32"
          },
          "name": {
            "type": "string",
            "nullable": true
          },
          "rows": {
            "type": "integer",
            "format": "int32"
          },
          "standingSection": {
            "type": "boolean"
          }
        },
        "additionalProperties": false
      },
      "TakenSeat": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "matchId": {
            "type": "integer",
            "format": "int32"
          },
          "seatId": {
            "type": "integer",
            "format": "int32"
          },
          "tickerOrderId": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "TicketOrder": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "email": {
            "type": "string",
            "nullable": true
          },
          "orderNumber": {
            "type": "string",
            "nullable": true,
            "readOnly": true
          },
          "takenSeats": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TakenSeat"
            },
            "nullable": true
          },
          "totalPrice": {
            "type": "number",
            "format": "double"
          }
        },
        "additionalProperties": false
      }
    }
  }
}